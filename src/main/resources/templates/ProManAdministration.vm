<html>
<head>
    <title>$i18n.getText("org.raboss.dev.atlassian.jira.proman.name")</title>
    <meta name="decorator" content="atl.general">
    $webResourceManager.requireResource("com.atlassian.auiplugin:dialog2")
<body>
</head>
<body>
<!-- https://docs.atlassian.com/aui/latest/docs/page-content-layout.html -->
<section id="content" role="main">
    <header class="aui-page-header">
        <div class="aui-page-header-inner">
            <div class="aui-page-header-main">
                <h1>$i18n.getText("org.raboss.dev.atlassian.jira.proman.name")</h1>
            </div>
            <div class="aui-page-header-actions">
                <div class="aui-buttons">
                    <a class="aui-button aui-button-light" id="create_evaluation_criteria" href="#">$i18n.getText("org.raboss.dev.atlassian.jira.proman.ui.menu.create_evaluation_criteria")</a>
                    <a class="aui-button aui-button-light" id="create_poll" href="#">$i18n.getText("org.raboss.dev.atlassian.jira.proman.ui.menu.create_poll")</a>
                    <a class="aui-button aui-button-light" id="create_evalutaion_category" href="#">$i18n.getText("org.raboss.dev.atlassian.jira.proman.ui.menu.create_evaluation_category")</a>
                </div>
            </div>
        </div>
    </header>
    <div class="aui-page-panel">
        <div class="aui-page-panel-inner">
            <div class="aui-page-panel-nav">
                <!-- content such as a vertical nav -->
                <div class="aui-navgroup aui-navgroup-vertical">
                    <div class="aui-navgroup-inner">
                        <div class="aui-nav-heading">
                            <strong></strong>
                        </div>
                        <ul class="aui-nav" resolved="">
                            <li #if($action.getActionName()=="ProManEvaluationCriteria")class="aui-nav-selected"><a href="#"#{else}><a href="ProManEvaluationCriteria.jspa?atl_token=${atl_token}"#end class="docs-nav-link" id="manage-evaluation-criteria-link">$i18n.getText("org.raboss.dev.atlassian.jira.proman.ui.manage_evaluation_criteria")</a></li>
                            <li #if($action.getActionName()=="ProManPolls")class="aui-nav-selected"><a href="#"#{else}><a href="ProManPolls.jspa?atl_token=${atl_token}"#end class="docs-nav-link" id="manage-polls-link">$i18n.getText("org.raboss.dev.atlassian.jira.proman.ui.manage_polls")</a></li>
                            <li #if($action.getActionName()=="ProManEvaluationCategories")class="aui-nav-selected"><a href="#"#{else}><a href="ProManEvaluationCategories.jspa?atl_token=${atl_token}"#end class="docs-nav-link" id="manage-evaluation-categories">$i18n.getText("org.raboss.dev.atlassian.jira.proman.ui.manage_evaluation_categories")</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <section class="aui-page-panel-content">
                <!-- main area for content -->
                #if($action.getActionName()=="ProManEvaluationCriteria")
                    #parse("templates/AdminEvaluationCriteria.vm")
                #elseif($action.getActionName()=="ProManPolls")
                    #parse("templates/AdminPolls.vm")
                #elseif($action.getActionName()=="ProManEvaluationCategories")
                    #parse("templates/AdminEvaluationCategories.vm")
                #end
            </section>
            <aside class="aui-page-panel-sidebar hidden">
                <!-- tangental content here -->
            </aside>
        </div>
    </div>
</section>
<!-- Render the dialog to create evaluation criteria -->
<section role="dialog" id="create_evaluation_criteria_dialog" class="aui-layer aui-dialog2 aui-dialog2-medium" aria-hidden="true">
    <!-- Dialog header -->
    <header class="aui-dialog2-header">
        <!-- The dialog's title -->
        <h2 class="aui-dialog2-header-main">$i18n.getText("org.raboss.dev.atlassian.jira.proman.ui.menu.create_evaluation_criteria")</h2>
        <!-- Actions to render on the right of the header -->
        <div class="aui-dialog2-header-secondary" />
        <!-- Close icon -->
        <a class="aui-dialog2-header-close">
            <span id="create_evaluation_criteria_dialog_close_button" class="aui-icon aui-icon-small aui-iconfont-close-dialog">Close</span>
        </a>
    </header>
    <!-- Main dialog content -->
    <div class="aui-dialog2-content">
        <form class="aui" action="#">
            <div class="field-group">
                <label for="evaluation_criterion_name_text_input">$i18n.getText("org.raboss.dev.atlassian.jira.proman.menu.manage_evaluation_criterion_name")<span class="aui-icon icon-required">$i18n.getText("org.raboss.dev.atlassian.jira.proman.ui.required")</span></label>
                <input class="text" type="text" id="evaluation_criterion_name_text_input" name="evaluation_criterion_name_text_input" title="$i18n.getText("org.raboss.dev.atlassian.jira.proman.menu.manage_evaluation_criterion_name")" />
                <div class="description">$i18n.getText("org.raboss.dev.atlassian.jira.proman.menu.manage_evaluation_criterion_name.tooltip")</div>
            </div>
            <div class="field-group">
                <label for="evaluation_criterion_type_select_input">$i18n.getText("org.raboss.dev.atlassian.jira.proman.menu.manage_evaluation_criterion_type")</label>
                <select class="select" id="evaluation_criterion_type_select_input" name="evaluation_criterion_type_select_input">
                    <option>A</option>
                    <option>B</option>
                    <option>C</option>
                </select>
                <div class="description">$i18n.getText("org.raboss.dev.atlassian.jira.proman.menu.manage_evaluation_criterion_type.tooltip")</div>
            </div>
            <fieldset>
                <legend><span>$i18n.getText("org.raboss.dev.atlassian.jira.proman.menu.manage_evaluation_criterion_comment.tooltip")</span></legend>
                <div class="field-group">
                    <label for="evaluation_criterion_comment_textarea_input">$i18n.getText("org.raboss.dev.atlassian.jira.proman.menu.manage_evaluation_criterion_comment")</label>
                    <textarea class="textarea" name="evaluation_criterion_comment_textarea_input" id="evaluation_criterion_comment_textarea_input" placeholder="$i18n.getText("org.raboss.dev.atlassian.jira.proman.menu.manage_evaluation_criterion_comment")"></textarea>
                </div>
            </fieldset>
        </form>
    </div>
    <!-- Dialog footer -->
    <footer class="aui-dialog2-footer">
        <!-- Actions to render on the right of the footer -->
        <div class="aui-dialog2-footer-actions">
            <button id="dialog-submit-button" class="aui-button aui-button-primary">OK</button>
            <button id="dialog-next-button" class="aui-button">Next</button>
            <button id="create_evaluation_criteria_dialog_close_button" class="aui-button aui-button-link">Close</button>
        </div>
        <!-- Hint text is rendered on the left of the footer -->
        <div class="aui-dialog2-footer-hint" />
    </footer>
</section>
<script type="application/javascript">
AJS.toInit(function($) { // inside this block "$" is a shorthand for "AJS.$"
    // Shows the dialog when the "Show dialog" button is clicked
    AJS.$("#create_evaluation_criteria").click(function() {
        AJS.dialog2("#create_evaluation_criteria_dialog").show();
    });

    // Hides the dialog
    AJS.$("#create_evaluation_criteria_dialog_close_button").click(function(e) {
        e.preventDefault();
        AJS.dialog2("#create_evaluation_criteria_dialog").hide();
    });
});
</script>
</body>
</html>
